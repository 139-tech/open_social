{% if icon_only %}

  <button{{ attributes.addClass(classes, 'icon-only') }}>
    <span class="sr-only">{{ label }}</span>
    {{ icon }}
  </button>

{% else %}

  <button
    {% if attributes %}
      {{ attributes.addClass(classes) }}
    {% else %}
      class="{{ classes }} {{ modifier_class }}"
    {% endif %}
    >
    {% if icon_position == 'after' %}
      {{ label }}{{ icon }}{{ element.caret }}
    {% else %}
      {{ icon }}{{ label }}{{ element.caret }}
    {% endif %}
  </button>

  {{ children }}

{% if addsearchicon %}
    <span class="search-icon">
      <svg>
        <use xlink:href="#icon-search"></use>
      </svg>
    </span>
  {% endif %}

{% endif %}
