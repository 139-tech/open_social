{{ attach_library('socialbase/teaser') }}

<div class="card teaser teaser--wide">
  <div class='teaser__image'>
    {{ content.field_group_image }}
  </div>
  <div class="teaser__icon">
    <svg class="teaser__content-type-icon">
      <use xlink:href="#icon-group"></use>
    </svg>
  </div>
  <div class='teaser__body'>
    <div class="teaser__content">
      {{ title_prefix }}
      {% if not page %}
        <h4{{ title_attributes }} class="teaser__title">
          <a href="{{ url }}" rel="bookmark">{{ label }}</a>
        </h4>
      {% endif %}
      {{ title_suffix }}
      {% if content.field_group_location|render or content.field_group_address|render %}
        <div class="teaser__content-line">
          <svg class="teaser__content-type-icon">
            <use xlink:href="#icon-location"></use>
          </svg>
          <span class="teaser__content-text">
            {{ content.field_group_location }}
            {% if content.field_group_location|render is not empty and content.field_group_address|render is not empty %},{% endif %}
            {{ content.field_group_address }}
            </span>
        </div>
      {% endif %}
    </div>

    <div class="card__actionbar">
      <div class="card__actionbar-side">
        <div class="teaser__tag">
          {{ group_type }}
        </div>

        <div class="badge teaser__badge" title="Total amount of members">
        <span class="badge__container">
          <svg class="badge__icon">
            <use xlink:href="#icon-user"></use>
          </svg>
          <span class="badge__label">
            {{ group_members }}
          </span>
        </span>
        </div>
      </div>

      <div class="card__actionbar-side right-side">
        <a href="{{ url }}" class="card__link btn btn-default" title="{{ label }}">
          {% trans %}Read more{% endtrans %}
        </a>
      </div>
    </div>

  </div>
</div>
