{{ attach_library('social_follow_taxonomy/paragraph_tag') }}

{% if term %}
<div class="paragraph paragraph--featured social_follow_tax">
  <div class="container">
    <div class="card teaser">
      <div class="teaser__body">
        <div class="teaser__content">
          <div class="teaser__left">
            <div class="teaser__tag">
              {% trans %}Tag{% endtrans %}
            </div>

            <div class="teaser__title">
              <h5>{{ term.name }}</h5>
            </div>

            <div class="teaser__related-content">
              {% for related_content in term.related_content %}
                {{ related_content.count }} {{ related_content.label }}
                {% if not loop.last %}|{% endif %}
              {% endfor %}
            </div>
          </div>

          <div class="actions">
            {{ term.flag }}
            <a href="{{ term.url }}" class="btn btn-default">
              {% trans %}See related content{% endtrans %}
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endif %}
