/**
 * Returns the allowed values for the activity status field.
 *
 * @return array $allowed_values
 */
function activity_creator_field_activity_status_allowed_values() {

  $allowed_values = [
    1 => 'Received',
    2 => 'Seen',
    3 => 'Read',
  ];

  return $allowed_values;
}

/**
